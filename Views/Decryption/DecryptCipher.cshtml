@model AnotherTechblog.Models.DecryptCipherViewModel

<h1>Decrypt Cipher</h1>

<form method="post">
    <div class="form-group">
        <label for="algorithm">Algorithm:</label>
        <select class="form-control" id="algorithm" name="Algorithm">
            <option value="Caesar">Caesar Cipher</option>
            <option value="Vigenere">Vigenere Cipher</option>
            <option value="RailFence">Rail Fence Cipher</option>
        </select>
    </div>
    <div class="form-group">
        <label for="cipher">Cipher Text:</label>
        <input type="text" class="form-control" id="cipher" name="Cipher" value="@Model.Cipher">
    </div>
    <button type="submit" class="btn btn-primary">Decrypt</button>
</form>

@if (Model.Cipher != null)
{
    <hr />
    <h2>Decrypted Text:</h2>
    <p>@Html.Raw(Model.DecryptedCipher)</p>
}